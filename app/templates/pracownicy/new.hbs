<div class="form-horizontal">


  <div class="form-group">
    <label class="col-sm-2 control-label">ID</label>
    <div class="col-sm-10">
      {{input type="text" value=model.rank class="form-control" placeholder="wpisz id"}}
    </div>
  </div>


  <div class="form-group">
    <label class="col-sm-2 control-label">Imię</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="wpisz nazwę"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Nazwisko</label>
    <div class="col-sm-10">
      {{input type="text" value=model.surname class="form-control" placeholder="wpisz nazwę"}}
    </div>
  </div>
 <div class="form-group">
    <label class="col-sm-2 control-label">Telefon</label>
    <div class="col-sm-10">
      {{input type="text" value=model.phone class="form-control" placeholder="wpisz nazwę"}}
    </div>
  </div>
<div class="form-group">
    <label class="col-sm-2 control-label">e-mail</label>
    <div class="col-sm-10">
      {{input type="text" value=model.email class="form-control" placeholder="wpisz nazwę"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">hasło do aplikacji</label>
    <div class="col-sm-10">
      {{input type="text" value=model.password class="form-control" placeholder="wpisz nazwę"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Czy pracownik może wysyłać posty</label>
    <div class="col-sm-10">
      {{input type="checkbox" checked=model.allowPost class="toggle"}}

    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Czy pracownik może wysyłać powiadomienia</label>
    <div class="col-sm-10">
      {{input type="checkbox" checked=model.allowNotyfication class="toggle"}}

    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Czy pracownik ma mieć dostęp do zamówień</label>
    <div class="col-sm-10">
      {{input type="checkbox" checked=model.allowOrders class="toggle"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Czy pracownik bedzie pełnił rolę kierowcy</label>
    <div class="col-sm-10">
      {{input type="checkbox" checked=model.allowDriver class="toggle"}}
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveLibrary' model }}>Dodaj do menu</button>
    </div>
  </div>
</div>