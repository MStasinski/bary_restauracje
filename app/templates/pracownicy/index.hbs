<div class="row">
  {{#each sortedModel as |pracownik|}}
  <div class="col-md-12">
    <div class="panel panel-default library-item">

      <div class="panel-heading">
        <h3 class="panel-title">ID: {{pracownik.rank}}</h3>
      </div>

      <div class="panel-body">
        <h3 class="panel-title">Imię: {{pracownik.name}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">Nazwisko: {{pracownik.surname}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">Telefon: {{pracownik.phone}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">e-mail: {{pracownik.email}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">Hasło: {{pracownik.password}}</h3>
      </div>
      <div class="panel-body">


        {{#if pracownik.allowPost}}
        <h4>pracownik może wysyłać posty</h4>
        {{/if}} {{#if pracownik.allowNotyfication}}
        <h4>pracownik może wysyłać powiadomienia</h4>
        {{/if}} {{#if pracownik.allowOrders}}
        <h4>pracownik ma dostęp do zamówień</h4>
        {{/if}} {{#if pracownik.allowDriver}}
        <h4>pracownik pełni rolę kierowcy</h4>
        {{/if}}

      </div>

      <div class="panel-footer text-right">
        {{#link-to 'pracownicy.edit' pracownik.id class='btn btn-success btn-xs'}}Edytuj{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' pracownik}}>Usuń</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>