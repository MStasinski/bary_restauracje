<div class="row">
  {{#each sortedModel as |pizza|}}
  <div class="col-md-12">
    <div class="panel panel-default library-item">

      <div class="panel-heading">
        <h3 class="panel-title">Pozycja: {{pizza.rank}}&nbsp;&nbsp;&nbsp;&nbsp; {{pizza.name}}</h3>
      </div>

      <div class="panel-body">
        <h3 class="panel-title">mała: {{pizza.price0}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">średnia: {{pizza.price1}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">duża: {{pizza.price2}}</h3>
      </div>
      {{!--
      <div class="panel-body">
        <h3 class="panel-title">Cena 4: {{pizza.price3}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">Cena 5: {{pizza.price4}}</h3>
      </div>
      <div class="panel-body">
        <h3 class="panel-title">Cena 6: {{pizza.price5}}</h3>
      </div>--}} 
      
     
      <div class="panel-body">
        <h3 class="panel-title">Opis: {{pizza.desc}}</h3>
      </div>

      <div class="panel-body">

        {{#if pizza.sold}}
        <h4>WYPRZEDANE</h4>
        {{/if}} {{!--
        <h3 class="panel-title">Wyprzedana: {{pizza.sold}}</h3>--}}
      </div>

      <div class="panel-footer text-right">
        {{#link-to 'pizzas.edit' pizza.id class='btn btn-success btn-xs'}}Edytuj{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' pizza}}>Usuń</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>